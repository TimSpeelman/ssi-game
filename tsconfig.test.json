{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "noEmit": true,
        // "strict": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./typings.d.ts"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "files": [
        "./typings.d.ts"
    ]
}